#!/bin/bash -x

. /root/kernel.data

LSB=`lsb_release -a`
lsb_release -a | perl -ane '$_=~s/:\s+(.*?)$/=\"$1\"/g;$_ =~ s/\ ID=/_ID=/g;print ' > lsb.data
. lsb.data
ARCH=x86_64


ZFS_VER=2.0.0
ZFS_NAME=zfs-${ZFS_VER}
ZFS_TAR=${ZFS_NAME}.tar.gz



pushd .
cd /root/x

tar -zxvf ${ZFS_TAR}
cd ${ZFS_NAME}

if (echo ${LSB} | grep -q Debian ); then
./configure --with-linux=/usr/src/linux-source-${KV}
else
./configure
fi
make -j8
make install

popd






